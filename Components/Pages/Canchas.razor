@page "/canchas"
@inject NavigationManager Navigation

<NavMenu />

<header class="bg-light py-3 border-bottom shadow-sm">
    <div class="container text-center">
        <h2 class="fw-bold text-primary mb-2">Nuestras Canchas</h2>
        <p class="text-muted mb-0" style="font-size: 0.95rem;">Explora las canchas disponibles y reserva tu espacio fácilmente</p>
    </div>
</header>


<main class="container mt-3">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var cancha in canchas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@cancha.Imagen" class="card-img-top rounded-top" alt="@cancha.Nombre">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-semibold">@cancha.Nombre</h5>
                        <p class="card-text text-muted">@cancha.Descripcion</p>
                        <div class="mt-auto">
                            <button class="btn btn-outline-primary w-100" @onclick="() => ReservarCancha(cancha.Nombre)">
                                Reservar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</main>

@code {
    private List<Cancha> canchas = new()
    {
        new Cancha { Nombre = "Cancha de Fútbol 7", Descripcion = "Amplia y con césped sintético.", Imagen = "img/cancha7.jpg" },
        new Cancha { Nombre = "Cancha de MicroFutbol", Descripcion = "Superficie dura y en excelente estado.", Imagen = "img/canchaMicro.jpg" },
        new Cancha { Nombre = "Cancha de Futbol 11", Descripcion = "Ideal para jugar con amigos.", Imagen = "img/cancha11.jpg" }
    };

    private void ReservarCancha(string nombreCancha)
    {
        // En el futuro podrías pasar el nombre como parámetro
        Navigation.NavigateTo("/reservas");
    }

    private class Cancha
    {
        public string Nombre { get; set; }
        public string Descripcion { get; set; }
        public string Imagen { get; set; }
    }
}
